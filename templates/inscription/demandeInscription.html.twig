{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h5>Nom : {{ user.getLicencie().getNom() }}</h5>
        <h5>Prénom : {{ user.getLicencie().getPrenom() }}</h5>
        <h5>Numéro de licence : {{ user.getLicencie().getNumLicence() }}</h5>

        {{ form_start(form) }}

        <div class="form-group">
            <label for="email">Email :</label>
            <input id="email" name="email" value="{{ user.getEmail() }}" class="form-control"/>
        </div>

        <div class="form-group">
            {{ form_label(form.restauration, 'Restauration', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.restauration, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.ateliers, 'Ateliers', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.ateliers, {'attr': {'class': 'form-control'}}) }}
        </div>


        <h5>Nuites</h5>

        <div class="row">
            <div class="col">
                <h3>6 au 7 Septembre</h3>
                <div class="row">
                    {% for hotel in hotels %}
                        <div class="col">
                            <p>{{ hotel.getNom() }}</p>
                            {% for tarif in hotel.getTarifs() %}
                                <div class="form-check">
                                    <input type="radio" id="chambre{{ tarif.getId() }}" name="sept6_7" value="{{ tarif.getId() }}" class="form-check-input"/>
                                    <label for="chambre{{ tarif.getId() }}" class="form-check-label">{{ tarif.getCategorie().getLibelleCategorie() }} : {{ tarif.getTarifNuite() }}€</label>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col">
                <h3>7 au 8 Septembre</h3>
                <div class="row">
                    {% for hotel in hotels %}
                        <div class="col">
                            <p>{{ hotel.getNom() }}</p>
                            {% for tarif in hotel.getTarifs() %}
                                <div class="form-check">
                                    <input type="radio" id="chambre{{ tarif.getId() }}" name="sept7_8" value="{{ tarif.getId() }}" class="form-check-input"/>
                                    <label for="chambre{{ tarif.getId() }}" class="form-check-label">{{ tarif.getCategorie().getLibelleCategorie() }} : {{ tarif.getTarifNuite() }}€</label>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Confirmer les choix</button>
            <button type="reset" class="btn btn-secondary">Supprimer</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
